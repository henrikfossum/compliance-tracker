.norwegian-compliance-pricing {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

/* Current sale price */
.current-price-container {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.75rem;
}

.current-price {
  font-size: calc(var(--font-size) * 1.5);
  font-weight: 700;
  color: var(--sale-price-color, #CC0000);
}

.current-price.regular {
  color: var(--text-color, #333);
